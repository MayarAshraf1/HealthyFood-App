@model HealthyFoodWebApplication.Models.ShoppingBagItem

@{
    ViewData["Title"] = "DeleteProduct";
}

<h1>DeleteProduct</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl 
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductTotalPrice)
        </dd>
    </dl>
    
    <form asp-action="DeleteProduct">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
